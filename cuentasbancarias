    attr_accessor :balance
    def initialize( bank ,account_numbre, balance = 0)
    @bank = bank
    @account_number = aacount_number
    @balance = balance
    end
    def transferir(amount, occount)
        self.balance = self.balance - amount
        occount.balance = occount.balance + amount
    end
end

